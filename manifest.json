{
  "manifest_version": 3,
  "name": "Briefly",
  "version": "1.0",
  "description": "Fetches plain text content of hovered links when Shift is pressed.Brief whatsapp messages",
  "permissions": [
    "scripting","activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}